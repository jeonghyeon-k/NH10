    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script>
            var count = 0
            var count2 = 0
            function changeImg1() {
                var img = document.getElementById("button_explanation")
                if (count % 2 == 1) {
                    //두번 클릭 시
                    img.src = "/../public/images/Checkbox_b.png"
                    count++
                } else {
                    img.src = "/../public/images/Checkbox_a.png" // 홀수번 클릭 이미지 변경
                    count++
                }
            }
            function changeImg2() {
                //전체 동의
                var img = document.getElementById("button_everything")
                var img2 = document.getElementById("uncheck_1")
                var img3 = document.getElementById("uncheck_2")
                var img4 = document.getElementById("uncheck_3")
                if (count2 % 2 == 1) {
                    //두번 클릭시
                    img.src = "/../public/images/Checkbox_b.png" //이미지 변경
                    img2.src = "/../public/images/icon_uncheck.png" //이미지 변경
                    img3.src = "/../public/images/icon_uncheck.png" //이미지 변경
                    img4.src = "/../public/images/icon_uncheck.png" //이미지 변경
                    count2++
                } //홀수번 클릭 시
                else {
                    img.src = "/../public/images/Checkbox_a.png" //이미지 변경
                    img2.src = "/../public/images/icon_check.png" //이미지 변경
                    img3.src = "/../public/images/icon_check.png" //이미지 변경
                    img4.src = "/../public/images/icon_check.png" //이미지 변경
                    count2++
                }
            }
        </script>
